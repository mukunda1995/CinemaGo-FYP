<ul class="list-unstyled">
    @foreach (var product in products)
    {
        <li class="media my-3">
            <div class="container mt-5 ">
                <form class=" row g-3 ">
                    <div class=" col-md-2">
                        <div class="media-img-wrapper mr-3">
                            <a href="/product/@product.Id">
                                <img class="media-img" src="@product.Image" alt="@product.Title" />
                            </a>
                        </div>

                    </div>
                    <div class=" col-md-10">
                        <div class="media-body align-content-start ">
                            <b>Title </b>
                            <br>
                            @product.Title
                            <br>
                            <b>Description </b>
                            <br>
                            @product.Description
                            <br>
                            <b>Release Date </b>
                            <br>
                            @product.ReleaseDate
                            <br>
                            <b>Language </b>
                            <br>
                            @product.Language
                            <br>
                            <b>Genre </b>
                            <br>
                            @product.Genre
                            <br>
                            <b>Running Time </b>
                            <br>
                            @product.RunningTime
                            <br>

                        </div>
                    </div>
                </form>
            </div>
        </li>
    }
</ul>



