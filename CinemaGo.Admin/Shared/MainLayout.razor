@inherits LayoutComponentBase
@inject NavigationManager navMananger;

<PageTitle>CinemaGo.Admin</PageTitle>

<div class="page">
    @if (AdminIsAutohorized)
    {
        <div class="sidebar">
            <NavMenu />
        </div>
    }
    <main>
        @if (AdminIsAutohorized)
        {
            <div class="top-row px-4">
                <a href="https://docs.microsoft.com/aspnet/" target="_blank">About</a>
            </div>
        }
        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

@code{
    public bool AdminIsAutohorized = true;
    public void Logout()
    {
        navMananger.NavigateTo("/login");
    }
}
